<h1>Burgers!</h1>

<h2>Devour a Burger!</h2>

<ul>
  {{#each burgers}}
  {{#unless devoured}}
  <li>
    {{burger_name}}

    <button class="change-eaten" data-id="{{id}}" data-newdevoured="{{devoured}}">
      EAT
    </button>

    <button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
  </li>
  {{/unless}}
  {{/each}}
</ul>

<h2>Find a Burger!</h2>

<ul>
  {{#each burgers}}
  {{#if devoured}}
  <li>
    {{burger_name}}

    <button class="delete-burger" data-id="{{this.id}}">DELETE!</button>

  </li>
  {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger!</h2>
<form class="create-form" method= "POST" action="/api/burgers">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> devoured!<br>
    <input type="radio" name="devoured" value="0"> Not devoured
  </div>

  <button type="submit" onclick="">
  >Add Burger</button>
</form>